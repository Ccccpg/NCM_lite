.player {
  position: fixed;
  bottom: var(--eafe5dd0);
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: white;
  box-sizing: border-box;
  box-shadow: rgba(100, 100, 111, 0.2) 0px -7px 29px 0px;
}
.player image {
  width: 100rpx;
  height: 100rpx;
}
.player .songMsg {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 10rpx;
}
.player .songMsg .songName {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: bold;
  font-size: 28rpx;
}
.player .songMsg .artists {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
}
.player .operation {
  display: flex;
  width: 200rpx;
  justify-content: space-evenly;
  align-items: center;
}
